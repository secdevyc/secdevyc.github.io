<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="container" style="background-color:red">
      <div class="d-flex align-items-center" id="header">
        <h1>POKE-DEX</h1>
        <a href="/pokemon/new" class="btn-outline-danger btn-sm">Add a New Pokemon</a>
      </div>
      <div class="d-flex flex-wrap ml-2" id="deck">
        <% for (let i = 0; i < pokemon.length; i++) { %>
          <div class="p-1 d-flex align-items-center m-1" id ="cards">
            <a href="/pokemon/<%= [i] %>"><img src="<%= pokemon[i].img %>" class="p-1" style="width:50px; height:50px;" /></a>
            <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                <input type="submit" value="del" class="btn btn-outline-danger btn-sm" />
            </form>
            <form action="/pokemon/<%= i %>/edit">
              <input type="submit" value="edit" class="btn btn-outline-primary btn-sm"/>
            </form>
          </div>
          <% } %>
      </div>

    </div>
  </body>
</html>
