<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="container" id="new" style="border-radius:7px">
      <h1 style="background-color:red">Add Pokemon</h1>
      <form action="/pokemon" method="POST" class="form-group">
        <div id="form-outline">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" />

          <label for="type">Type</label>
          <input type="text" name="type" id="type" /><br />
        </div>

        <div id="form-outline">
          <label for="img">Image</label>
          <input type="text" name="img" id="img" class="form-control"/><br />
        </div>

        <div id="form-outline">
          <label for="stats">Stats</label><br  />
          <input type="text" name="hp" value="hp"/>

          <input type="text" name="attack" value="attack"/>

          <input type="text" name="defense" value="defense"/><br  />

          <input type="text" name="spattack" value="spattack"/>

          <input type="text" name="spdefense" value="spdefense"/>

          <input type="text" name="speed" value="speed" class="m-1"/><br  />
        </div>
        <input type="submit" value="Create Pokemon" class="mt-3 btn btn-outline-danger btn-block">
      </form>
    </div>
  </body>
</html>
